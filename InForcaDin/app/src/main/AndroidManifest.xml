<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="trabalhoandroid.com.br.inforcadin">

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="trabalhoandroid.com.br.inforcadin.activities.MainActivity"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="trabalhoandroid.com.br.inforcadin.activities.CriaDesafioActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name="trabalhoandroid.com.br.inforcadin.activities.SelecionaCategoriaActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name="trabalhoandroid.com.br.inforcadin.activities.InGameActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name="trabalhoandroid.com.br.inforcadin.activities.EscolhaNovaForcaActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name="trabalhoandroid.com.br.inforcadin.activities.ListaForcasAcivity"
            android:screenOrientation="nosensor"/>
        <activity android:name="trabalhoandroid.com.br.inforcadin.activities.VitoriaActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name="trabalhoandroid.com.br.inforcadin.activities.DerrotaActivity"
            android:screenOrientation="nosensor"/>
    </application>

</manifest>