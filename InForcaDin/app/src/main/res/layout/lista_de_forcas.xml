<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCategoriaLV"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:text="@string/txt_categoria"
        android:layout_marginTop="@dimen/margin_bottom_campos"
        android:layout_marginBottom="@dimen/margin_bottom_campos"/>

    <TextView
        android:id="@+id/txtPalavraLV"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text="@string/txt_forca"
        android:layout_marginTop="@dimen/margin_bottom_campos"
        android:layout_marginBottom="@dimen/margin_bottom_campos"/>

</LinearLayout>